@using FProjectCamping.Models.ViewModels.Rooms;
@{
    ViewBag.Title = "營區房型";
    var hotrooms = ViewBag.hotrooms as List<RoomtypeVM>;
}



<main>

    <img src="~/Images/photo1.jpg" class="img-fluid" alt="">



    <div class="separator1"></div>

    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center">

                <div class="text">
                    <div class="d-flex flex-column align-items-start">
                        <p class="text-muted1" style="font-size: 38px; color: rgba(74, 113, 184, 0.8); margin-bottom: 0; margin-left: -10px;">河畔區</p>
                        <p class="text-below" style="font-size: 26px; color: rgba(74, 113, 184, 0.8); margin-top: -10px;">-foant-</p>
                    </div>
                </div>

                <div class="additional-text">
                    <p class="text-muted2" style="font-size: 26px; color: rgba(74, 113, 184, 0.8)">享受自然的清新</p>
                </div>

            </div>
        </div>
    </div>
    <div class="separator2"></div>




    <div>
        <div class="m-3">

            <div class="container">

                <div class="row">
                    <h1 class="fw-bolder" style="margin-bottom: 20px;">
                        營位介紹
                        <small class="fw-normal fst-italic"></small>
                    </h1>
                </div>
            </div>

            @{foreach (var item in ViewBag.Rooms)
                {

                    <div class="container-fluid" style="width: 88%; margin-right: -2%; margin-bottom: 80px; ">
                        <div class="row">

                            <div class="col-md-6">

                                <div id="carouselExampleCaptions1" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators">
                                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="0" class=""></button>
                                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="1" class="active" aria-current="true"></button>
                                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="2"></button>
                                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="3"></button>
                                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="4"></button>
                                    </div>
                                    <div class="carousel-inner">
                                        <div class="carousel-item">
                                            <img src="~/images/4daan-weijers-pSaEMIiUO84-unsplash.jpg" class="d-block w-100" alt="...">
                                            <div class="carousel-caption d-none d-md-block">

                                            </div>
                                        </div>
                                        <div class="carousel-item active">
                                            <img src="~/images/4daan-weijers-pSaEMIiUO84-unsplash.jpg" class="d-block w-100" alt="...">
                                            <div class="carousel-caption d-none d-md-block">

                                            </div>
                                        </div>
                                        <div class="carousel-item">
                                            <img src="~/images/4daan-weijers-pSaEMIiUO84-unsplash.jpg" class="d-block w-100" alt="...">
                                            <div class="carousel-caption d-none d-md-block">

                                            </div>
                                        </div>

                                        <div class="carousel-item">
                                            <img src="~/images/4daan-weijers-pSaEMIiUO84-unsplash.jpg" class="d-block w-100" alt="...">
                                            <div class="carousel-caption d-none d-md-block">


                                            </div>
                                        </div>

                                        <div class="carousel-item">
                                            <img src="~/images/4daan-weijers-pSaEMIiUO84-unsplash.jpg" class="d-block w-100" alt="...">
                                            <div class="carousel-caption d-none d-md-block">

                                            </div>
                                        </div>


                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>

                            <script src="scripts/bootstrap.bundle.js"></script>


                            <div class="col-md-6 lift col-xl-6 col-md-12">


                                <h2>@item.RoomType.Name </h2>
                                <div class="separator3"></div>

                                <div>
                                    <h6><strong>商品資訊</strong></h6>
                                    <ul style="font-size:18px">
                                        <li><span>嘆為觀止的絕美秘境景觀（總坪數約12坪）</span></li>
                                        <li><span>有私人衛浴含(獨立衛浴設備、高級沐浴組)</span></li>
                                        <li><span>每帳皆含頂級彈簧石墨烯床墊（標準兩大床）</span></li>
                                        <li><span>頂級羽絨被、石墨烯枕</span></li>
                                        <li><span>住客專用免費平面停車場</span></li>
                                        <li><span>野餐墊一張、露營椅四張、帳篷鎖一組</span></li>
                                        <li><span>依住房人數提供免費礦泉水</span></li>
                                        <li><span>另備有奶瓶消毒鍋、嬰兒澡盆，如有需求請提前預約</span></li>
                                        <li>
                                            <span style="font-size:12px">
                                                <span style="color:#008080">帳內不主動提供拋棄式盥洗用品（牙膏/刷、浴帽），若有需要可於報到時向服務人員索取</span>
                                            </span>
                                        </li>
                                    </ul>
                                </div>


                                <div>

                                    <div class="roomprice">
                                        <p><strong>平日價格NT$@item.WeekdayPrice</strong></p>
                                        <p><strong>假日價格NT$@item.WeekendPrice</strong></p>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-start">
                                            <a class="btn btn-success me-2" href="@Url.Action("Roomtype", "Rooms", new { area = "" })?roomTypeId=@item.RoomTypeId" style="margin-bottom: -8px;">預約去</a>
                                        </div>
                                    </div>
                                </div>


                                <div>


                                    <label style="margin-top: 20px;">提供的設備:</label>
                                    <label>
                                        <i class="fas fa-check-double"></i> 床墊
                                    </label>
                                    <label>
                                        <i class="fas fa-check-double"></i> 折合桌
                                    </label>
                                    <label>
                                        <i class="fas fa-check-double"></i> 椅子
                                    </label>



                                </div>



                            </div>
                        </div>
                    </div>

                }
            }
        </div>
    </div>



</main>


@section css{
    <style>
        .carousel-caption h5 A {
            color: white;
            text-decoration: none;
            font-weight: bold;
            font-size: 1.5em;
        }

        .separator1 {
            height: 2px;
            width: 85%; /* 分隔线的宽度为页面宽度的85% */
            background-color: rgba(33, 94, 173, 0.2);
            margin: 20px auto; /* 水平居中 */
            margin-top: 5%;
        }

        .separator2 {
            height: 2px;
            width: 85%; /* 分隔线的宽度为页面宽度的85% */
            background-color: rgba(33, 94, 173, 0.2);
            margin: 20px auto; /* 水平居中 */
            margin-bottom: 8%;
        }

        .container-fluid img {
            width: 100%;
            max-height: 550px; /* 设置轮播图的最大高度 */
            object-fit: cover;
        }

        .separator3 {
            height: 5px;
            width: 25%; /* 分隔线的宽度为页面宽度的85% */
            background-color: rgb(95, 197, 11);
            margin-bottom: 5%;
            margin-top: -1%;
            margin-left: 1%;
        }

        .carousel-inner .carousel-item img {
            width: 100%;
            height: 50%;
            max-width: none;
            border-radius: 20px; /* 添加圆角，值可以根据你的需要调整 */
        }

        .carousel-item img {
            max-width: 100%;
            height: 400px;
        }

        .roomprice p {
            margin: 3px;
            margin-bottom: 10px;
        }
    </style>
}
