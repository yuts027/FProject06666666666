@model FProjectCamping.Models.ViewModels.Members.ForgotPasswordVm

@{
    ViewBag.Title = "忘記密碼";
}


@section css {
    <link rel="stylesheet" href="~/css/main_register.css">

}

<div class="container">
    <div class="memberarea">
        <div class="row memberinner align-items-center justify-content-center">
            <div class="col-lg-6 col-md-12 p-2">
                <div class="memberleft-img p-3"><img src="~/images/camping_bn.jpg" alt="" class="img-fluid"></div>

            </div>
            <div class="col-lg-6 col-md-12 p-3">

                <div class="row justify-content-center memberightarea login">
                    <div class="registertitle">
                        <h3 class="m-0 text-start ps-3 pb-3 border-bottom"><i class="bi bi-person-fill"></i>忘記密碼</h3>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="mt-3">
                                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label col-md-2" })

                                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

                            </div>

                            <div class="mt-3">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label col-md-2" })

                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            </div>

                            <div class="mt-3">

                                <input type="submit" value="送出申請" class="btn btn-dark col-12 mt-4" />

                            </div>
                        </div>
                    }

                    <div class="mt-2">
                        <div class="text-end">
                            <button type="button" id="setButton" onclick="setDefaultAccount()" class="btn btn-primary">Demo tim</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

     <script>

    function setDefaultAccount1() {
        var passwordInput = document.getElementById("Password");
        passwordInput.value = "12345@12345";
    }
    </script>
}
