
@{
    ViewBag.Title = "會員專區";
    var member = ViewBag.CurrentMember as FProjectCamping.Models.EFModels.Member;

}

@section css{
    <link rel="stylesheet" href="~/css/main_member.css">
}

<div class="container">

    <div class="memberarea">

        <div class="row memberinner justify-content-around">
            @{
                Html.RenderPartial("_mod_membernav",member);
            }

            <div class="col-lg-8 ps-4 pe-4 row align-content-center">
                <div class="container-fuild container_carousel">
                    <!--輪播 begin-->
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></button>

                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/s4_pic1.jpg" class="d-block w-100 img-fluid" alt="活動1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/s4_pic2.jpg" class="d-block w-100 img-fluid" alt="活動2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/s4_pic3.jpg" class="d-block w-100 img-fluid" alt="活動3">
                            </div>



                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <!--輪播 end-->
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

